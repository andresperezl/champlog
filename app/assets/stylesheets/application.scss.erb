@import url(http://fonts.googleapis.com/css?family=Roboto:400italic,100,300,100italic,300italic,400,500,700);
@import "foundation_and_overrides";
@import "font-awesome-sprockets";
@import "font-awesome";

 $soft-shadow : #666666;


body{
	padding-top: rem-calc(72);
}

.champ-icon{
	background-repeat: no-repeat;
	display: block;
	width: 48px;
	height: 48px;
	margin: 0;
}

.champion0{
	background-image: url('<%= "#{ddragon_sprite}/champion0.png" %>');
}
.champion1{
	background-image: url('<%= "#{ddragon_sprite}/champion1.png" %>');
}
.champion2{
	background-image: url('<%= "#{ddragon_sprite}/champion2.png" %>');
}
.champion3{
	background-image: url('<%= "#{ddragon_sprite}/champion3.png" %>');
}
.champion4{
	background-image: url('<%= "#{ddragon_sprite}/champion4.png" %>');
}

.topnav{
	background-color: white;
	box-shadow: 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28);
	.title-area{
		.side-menu-btn{
			padding: rem-calc(10);
			border-radius: 50%;
			text-align: center;
			transition: color .2s ease-in-out;
			font-size: 1.25rem;
			cursor: pointer;
			margin: auto;
			i{
				display: inline-block;
				vertical-align: middle;
			}
		}
		.side-menu-btn:hover{
			color: $monsoon;
		}
	}
	li{
		display: inline-block;
		vertical-align: middle;
	}
}

ul.cardholder{
	list-style: none;
	margin-left: 0;
	padding: 0.3rem 0.4rem 0 0.4rem;
	width: 100%;

	[class*="block-grid-"] {
		margin: 0;
		li{
			padding: 0;
		}
		input[type=radio]{
			display: none;
			+ label {
				display: block;
				font-size: 2rem;
				font-weight: 200;
				margin: 0;
				width: 100%;
				text-align: center;
				vertical-align: center;
				transition: all 300ms cubic-bezier(.4,0,1,1);
			}
		}
		input[type=radio]:checked + label{
			background-color: $khazix;
			font-weight: bold;
			color: white;
		}
	}

	li{
		.card-title{
			border-bottom: 1px solid #DDD;
			font-weight: 100;
			padding-left: rem-calc(20);
		}
		@extend .round;
		box-shadow: 
			0px 3px 2px #C0C0C0,
			1px 0 1px #DDD,
			-1px 0 1px #DDD,
			0 -1px 1px #DDD;
		margin-bottom: 0.3rem;
		padding: 0.3rem;

		.title{
			border-bottom: 1px solid #DDDDDD;
			font-weight: 100
			;
		}
	}
}

.center{
	width: auto;
	margin: 0 auto;
}

#side-menu{
	width: rem-calc(232);
	bottom: 0;
	left: 0;
	overflow: visible;
	position: fixed;
	width: rem-calc(232);
	top: rem-calc(72);
	z-index: 4;
	-webkit-transform: translateX(rem-calc(-242));
	transform: translateX(rem-calc(-242));
	-webkit-transition: -webkit-transform .15s ease-in-out;
	transition: transform .15s ease-in-out;
	will-change: top,left;
}
#side-menu.open{
	-webkit-transform: translateX(0);
	transform: translateX(0);
}
#open-menu-button{
	i{
		transition: transform 150ms cubic-bezier(.4,0,1,1);
	}
}
.side-menu-content{
	background: #fff;
	bottom: 0;
	box-shadow: 0 0 4px rgba(0,0,0,.14),2px 4px 8px rgba(0,0,0,.28);
	color: #757575;
	line-height: 40px;
	overflow-x: hidden;
	overflow-y: auto;
	position: absolute;
	white-space: nowrap;
	width: rem-calc(232);
	top: 0;
	ul{
		margin: 0;
		list-style: none;
		li.profile-icon{
			background: linear-gradient(to bottom, #2f009e 0%,#542fa3 50%,#49259e 51%,#5b3ba0 100%); /* W3C */
			padding: rem-calc(5);
			color: white;
			font-size: 1.125rem;
			font-weight: 200;
			text-align: center;
			img{
				border-radius: rem-calc(32);
				margin: 0 auto;
				width: rem-calc(64);
				height: rem-calc(64);
			}
		}
		li.section > h5{
			text-align: center;
			font-weight: 200;
			margin-bottom: rem-calc(3.2);
			cursor: default;

		}
		li.section{
			margin-top: rem-calc(5);
			border-bottom: 1px solid #DDD;
			a{
				color: #777;
				font-weight: bolder;
			}
			li.section-item{
				cursor: pointer;
				padding-left: rem-calc(15);
				transition: background-color .15s ease-in-out;
			}
			li.section-item:hover{
				color: #555 !important;
				background-color: #DDD;
			}
		}
	}
}

.report-bug{
	font-weight: bold;
	padding-top: 8px;
	height: 56px;
	display: flex;
	flex-direction: row-reverse;
	white-space: nowrap;
}

.report-wrapper{
	bottom: 0;
	padding: 23px;
	padding-left: 15px;
	pointer-events: none;
	position: fixed;
	right: 0;
	white-space: nowrap;
	z-index: 21;
	will-change: top,left;
}

.report-btn{
	background-color: #2C8CDB;
	float: right;
	height: rem-calc(56);
	position: relative;
	width: rem-calc(56);
	border: none;
	border-radius: 50%;
	box-shadow: 0 0 4px rgba(0,0,0,.14),0 4px 8px rgba(0,0,0,.28);
	box-sizing: content-box;
	cursor: pointer;
	outline: none;
	padding: 0;
	pointer-events: auto;
	-webkit-user-drag: none;
	-webkit-transition: -webkit-all 150ms cubic-bezier(.4,0,1,1);
	transition: all 150ms cubic-bezier(.4,0,1,1);
}

.report-btn:hover{
	
	width: auto;
	border-radius: 5%;
	.report-pre{
		opacity: 0;
	}
	.report-post{
		opacity: 1;
	}
	-webkit-transition: all .2s cubic-bezier(.4,0,.2,1);
	transition: all .2s cubic-bezier(.4,0,.2,1);

}

.report-btn-content{
	background-size: rem-calc(24);
	display: block;
	height: rem-calc(24);
	margin: auto;
	-webkit-user-drag: none;
}

.report-pre{
	left: 0;
	margin-left: rem-calc(16);
	margin-top: rem-calc(16);
	position: absolute;
	top: 0;
	-webkit-transition: all .2s cubic-bezier(.4,0,.2,1);
	transition: all .2s cubic-bezier(.4,0,.2,1);
	width: rem-calc(24);
}

.report-post{
	opacity: 0;
	font-size: rem-calc(16);
	margin: rem-calc(16);

}
