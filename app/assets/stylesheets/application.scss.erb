@import url(http://fonts.googleapis.com/css?family=Roboto:400italic,100,300,100italic,300italic,400);
@import "foundation_and_overrides";

 $soft-shadow : #666666;

.champ-icon{
	background-repeat: no-repeat;
	display: block;
	width: 48px;
	height: 48px;
	margin: 0;
}

.champion0{
	background-image: url('<%= "#{DDRAGON_SPRITE}/champion0.png" %>');
}
.champion1{
	background-image: url('<%= "#{DDRAGON_SPRITE}/champion1.png" %>');
}
.champion2{
	background-image: url('<%= "#{DDRAGON_SPRITE}/champion2.png" %>');
}
.champion3{
	background-image: url('<%= "#{DDRAGON_SPRITE}/champion3.png" %>');
}
.champion4{
	background-image: url('<%= "#{DDRAGON_SPRITE}/champion4.png" %>');
}

.top-bar{
	box-shadow: 0 1px 3px $soft-shadow;
}

ul.cardholder{
	list-style: none;
	margin-left: 0;
	padding: 0.3rem 0.4rem 0 0.4rem;
	width: 100%;

	li{
		@extend .round;
		box-shadow: 
			0px 3px 2px #C0C0C0,
			1px 0 1px #DDD,
			-1px 0 1px #DDD,
			0 -1px 1px #DDD;
		margin-bottom: 0.3rem;
		padding: 0.3rem;

		.title{
			border-bottom: 1px solid #DDDDDD;
			font-weight: 100
			;
		}
	}
}

.center{
	width: auto;
	margin: 0 auto;
}